<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.jmarkstar.s3.MainActivity">

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView android:text="Cambios de orientación"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button android:text="Bloquear la orientación"
            android:onClick="onGoBlockOrientation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button android:text="Prevenir la orientación"
            android:onClick="onGoPreventOrientation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button android:text="Guardar datos sencillos"
            android:onClick="onGoSaveStates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button android:text="Retained Fragments y datos complejos"
            android:onClick="onGoSaveComplexData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button android:text="Hilos"
            android:onClick="onGoThreads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</RelativeLayout>
